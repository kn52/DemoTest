@page
@model RazorPages.Pages.Category.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>Category List</h4>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" name="search" value="@Model.SearchTerm" style="border-top-right-radius: 0.25em; border-bottom-right-radius: 0.25em;" />
            &nbsp;&nbsp;
            <span class="input-group-btn">
                <button class="btn btn-outline-primary">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>
<p>
    <a class="btn btn-outline-primary" asp-page="Create">Add New</a>
</p>
@if (Model.Category != null && Model.Category.Count > 0)
{
    <div style="height:365px;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].Description)
                    </th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Category)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a class="btn btn-outline-info"
                               asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-outline-success"
                               asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-danger"
                               asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.Category.TotalPages > 0)
    {
        <nav class="table-responsive">
            <ul class="pagination justify-content-center d-flex flex-wrap">
                @if (Model.Category.PageIndex >= 1)
                {
                    <li class="page-item">
                        <a asp-page="./Index"
                           asp-route-pageIndex="1"
                           asp-route-currentFilter="@Model.SearchTerm"
                           class="btn btn-outline-primary
                               @(!Model.Category.HasPreviousPage ? "disabled" : "")">
                            First
                        </a>
                    </li>
                    <span>&nbsp;</span>
                    <li class="page-item">
                        <a asp-page="./Index"
                           asp-route-pageIndex="@(Model.Category.PageIndex - 1)"
                           asp-route-currentFilter="@Model.SearchTerm"
                           class="btn btn-outline-primary
                               @(!Model.Category.HasPreviousPage ? "disabled" : "")">
                            Prev
                        </a>
                    </li>
                }

                @for (var p = 1; p <= Model.Category.TotalPages; p++)
                {
                    <span>&nbsp;</span>
                    <li class="page-item @(p == Model.Category.PageIndex ? "active" : "")">
                        <a asp-page="./Index"
                           asp-route-pageIndex="@p"
                           asp-route-currentFilter="@Model.SearchTerm"
                           class="btn btn-outline-primary">
                            @p
                        </a>
                    </li>
                }

                @if (Model.Category.PageIndex <= Model.Category.TotalPages)
                {
                    <span>&nbsp;</span>
                    <li class="page-item">
                        <a asp-page="./Index"
                           asp-route-pageIndex="@(Model.Category.PageIndex + 1)"
                           asp-route-currentFilter="@Model.SearchTerm"
                           class="btn btn-outline-primary
                               @(!Model.Category.HasNextPage ? "disabled" : "")">
                            Next
                        </a>
                    </li>
                    <span>&nbsp;</span>
                    <li class="page-item">
                        <a asp-page="./Index"
                           asp-route-pageIndex="@(Model.Category.TotalPages)"
                           asp-route-currentFilter="@Model.SearchTerm"
                           class="btn btn-outline-primary
                               @(!Model.Category.HasNextPage ? "disabled" : "")">
                            Last
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <h4>NNo Record Found</h4>
}


