@page
@model RazorPages.Pages.Login.UserLoginModel

@{
    ViewData["Title"] = "UserLogin";
}


<div class="login-main-container">
    <div class="login-child-container">
        <h3 class="login-title">Login</h3>
        <div style="width:80%">
            <form method="post" style="height:300px;">
                <div style="height:70%">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="LoginCredentials.Username" class="control-label color-white"></label>
                        <input asp-for="LoginCredentials.Username" class="form-control" />
                        <span asp-validation-for="LoginCredentials.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoginCredentials.Password" class="control-label color-white"></label>
                        <input asp-for="LoginCredentials.Password" type="password" class="form-control" />
                        <span asp-validation-for="LoginCredentials.Password" class="text-danger"></span>
                    </div>
                </div>
                <div style="height:30%">
                    <div class="form-group" style="margin-bottom:0px">
                        <input type="submit" value="Login" class="btn btn-success" style="width:100%" />
                    </div>
                </div>
                
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
