@page
@model RazorPages.Pages.Home.AddUrlsModel

@{
    ViewData["Title"] = "AddUrls";
}

<h4>Add RedirectUrls</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RedirectUrls.Url" class="control-label"></label>
                <input asp-for="RedirectUrls.Url" class="form-control" />
                <span asp-validation-for="RedirectUrls.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RedirectUrls.UrlDescription" class="control-label"></label>
                <input asp-for="RedirectUrls.UrlDescription" class="form-control" />
                <span asp-validation-for="RedirectUrls.UrlDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Url" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Home">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
